// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//--------------------------------------------------------------------------
// user

model User {
  id                   Int      @id @default(autoincrement())
  email                String   @unique
  username             String   @unique
  staff                Boolean  @default(false)
  password             String?
  profile              Profile?
  twoFactorAuthEnabled Boolean  @default(false)
  twoFactorAuthSecret  String?

  channelUsers         ChatChannelUsers[]
  chatMessages         ChatMessages[]
  muting               ChatBlockMute[] @relation("Muting")
  mutedBy              ChatBlockMute[] @relation("MutedBy")
  banned               ChatBan[]
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
}

//--------------------------------------------------------------------------
// chat

enum Publicity {
  PUBLIC
  PRIVATE
}

enum UserType {
  OWNER
  ADMIN
  USER
}

model ChatChannels {
  channelId       Int             @id @default(autoincrement())
  channelName     String          @unique
  createdAt       DateTime
  channelType     Publicity
  hashedPassword  String?
  users           ChatChannelUsers[]
  chatMessages    ChatMessages[]
  banUsers        ChatBan[]
}

model ChatChannelUsers {
  channelUserId   Int             @id @default(autoincrement())
  channel         ChatChannels    @relation(fields: [channelId], references: [channelId])
  channelId       Int             // relation scalar field  (used in 'channel')
  user            User            @relation(fields: [userId], references: [id])
  userId          Int             // relation scalar field  (used in 'user')
  type            UserType
}

model ChatMessages {
  messageId       Int             @id @default(autoincrement())
  channel         ChatChannels    @relation(fields: [channelId], references: [channelId])
  channelId       Int             // relation scalar field  (used in 'channel')
  sender          User            @relation(fields: [senderId], references: [id])
  senderId        Int             // relation scalar field  (used in 'sender')
  content         String
  createdAt       DateTime
}

model ChatBlockMute {
  id              Int             @id @default(autoincrement())
  fromUser        User            @relation("Muting", fields: [fromUserId], references: [id])
  fromUserId      Int             // relation scalar field  (used in 'fromUser')
  toUser          User            @relation("MutedBy", fields: [toUserId], references: [id])
  toUserId        Int             // relation scalar field  (used in 'toUser')
  muteUntil       DateTime?
}

model ChatBan {
  id              Int             @id @default(autoincrement())
  channel         ChatChannels    @relation(fields: [channelId], references: [channelId])
  channelId       Int             // relation scalar field  (used in 'channel')
  user            User            @relation(fields: [userId], references: [id])
  userId          Int             // relation scalar field  (used in 'user')
}

//--------------------------------------------------------------------------
// 削除予定

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  author    String
  createdAt DateTime @default(now())
}
